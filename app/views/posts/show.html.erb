<h2>
	<%= @post.title %>
</h2>
<p>
	<%= [@post.author, @post.created_at].join(' - ') %>
</p>
<p>
	<%= @post.body %>
</p>

<h3>
	Comments
</h3>

<ul>
	<% @post.comments.each do |comment| %>
		<%= comment.body %>
	<% end %>
</ul>

<p>
	<%= link_to 'Back', [:posts] %> | 
	<%= link_to 'Edit', [:edit, @post] %> | 
	<%= link_to 'Delete', [@post], :method => :delete, :confirm => 'Delete this post?' %>
</p>
